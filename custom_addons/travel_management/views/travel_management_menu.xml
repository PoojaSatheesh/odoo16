    <menuitem id="travels_menu_root" name="Travel Management"/>

    <menuitem id="travels_first_menu_root" name="Booking" parent="travels_menu_root"/>
    <menuitem parent="travels_first_menu_root" id="travels_first_menu_root1" name="Booking" action="travels_action"/>

    <!-- 2nd menu   -->
    <menuitem id="travels_second_menu_root" name="Configuration" parent="travels_menu_root"/>
    <menuitem parent="travels_second_menu_root" id="travels_second_menu_root1" name="Locations"
              action="travels_locations_action"/>
    <menuitem parent="travels_second_menu_root" id="travels_second_menu_root2" name="Service Types"
              action="travels_service_types_action"/>

    <!-- 3rd menu-->
    <menuitem id="travels_third_menu_root" name="Travel Management Report" parent="travels_menu_root"/>
    <menuitem parent="travels_third_menu_root" id="travels_third_menu_root1" name="Travel Management Report"
              action="pdf_report_wizard_action"/>

</odoo>