<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!--Travel-->
    <record id="travels_action" model="ir.actions.act_window">
        <field name="context">{'search_default_default_filter':1}</field>
        <field name="name">Travel Management</field>
        <field name="res_model">travel.management</field>
        <field name="view_mode">tree,form,kanban,calendar</field>
    </record>


    <!--  Locations action -->
    <record id="travels_locations_action" model="ir.actions.act_window">
        <field name="name">Locations</field>
        <field name="res_model">travels.location</field>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="locations_view_tree"/>
    </record>


    <!-- Service types action   -->
    <record id="travels_service_types_action" model="ir.actions.act_window">
        <field name="name">Service Types</field>
        <field name="res_model">travels.service.types</field>
        <field name="view_mode">tree,form,kanban</field>
    </record>

