<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <!--  Record rules for model- travel_booking  -->
        <!--  Manager access  -->
    <record id="manager_access_rule" model="ir.rule">
        <field name="name">All Records</field>
        <field name="model_id" ref="travel_management.model_travel_management"/>
        <field name="domain_force">[(1,'=',1)]</field>
        <field name="groups"
               eval="[Command.link(ref('travel_management.travel_management_manager_access'))]"/>
    </record>

        <!-- User access  -->
    <record id="user_access_rule" model="ir.rule">
        <field name="name">All the booking created from own company </field>
        <field name="model_id" ref="travel_management.model_travel_management"/>
        <field name="domain_force">['|',('company_id','=',False), ('company_id', '=', user.company_id.id)]
        </field>
        <field name="groups"
               eval="[Command.link(ref('travel_management.travel_management_user_access'))]"/>
    </record>

