<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- tree view -->
    <record id="machines_view_tree" model="ir.ui.view">
        <field name="name">machines.view.tree</field>
        <field name="model">machine.list</field>
        <field name="arch" type="xml">
            <tree string="machines" editable="top">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <!--  machines action  -->
    <record id="machines_action" model="ir.actions.act_window">
        <field name="name">Machines</field>
        <field name="res_model">machine.list</field>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="machines_view_tree"/>
    </record>

    <menuitem parent="sale.sale_order_menu" id="machine_first_menu_root1" name="Machines" action="machines_action"/>
</odoo>