<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <!--view wizard-->
    <record id="tolerance_wizard_view_form" model="ir.ui.view">
        <field name="name">tolerance.wizard.form</field>
        <field name="model">wizard.view</field>
        <field name="arch" type="xml">
            <form string="Tolerance Wizard">
                <field name="name" style="font-size: 20px;"/>
                <group class="oe_title">
                    <field name="accept_id" invisible="1"/>
                </group>
                <footer>
                    <button name="action_accept" string="Accept" class="oe_highlight" type="object"/>
                    <button name="action_reject" string="Reject" class="oe_highlight" type="object"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="tolerance_wizard_action" model="ir.actions.act_window">
        <field name="name">Tolerance Wizard</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">wizard.view</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="tolerance_wizard_view_form"/>
        <field name="target">new</field>
    </record>

</odoo>